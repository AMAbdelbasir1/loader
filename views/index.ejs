<!DOCTYPE html>
<html>
  <head>
    <title>Video Upload</title>
    <link rel="stylesheet" type="text/css" href="../css/navbar.css" />
    <link rel="stylesheet" href="../css/upload.css" />
  </head>
  <body>
    <%- include("./navbar") %>
    <input type="hidden" name="limit" value="<%= limit%>" id="limit" />
    <input type="hidden" name="premuim" value="<%= premuim%>" id="premuim" />
    <h1>Video Upload</h1>
    <form id="uploadForm" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title:</label>
        <input
          type="text"
          name="title"
          id="title"
          value=""
          placeholder="Title"
          required />
      </div>
      <div class="form-group">
        <label for="image">Image:</label>
        <input type="file" name="image" id="image" accept="image/*" required />
      </div>
      <div class="form-group">
        <label for="video">Video:</label>
        <input type="file" name="video" id="video" accept="video/*" required />
      </div>
      <button id="btnSub" type="submit">Upload</button>
    </form>

    <div id="loading">
      <p>Uploading...</p>
    </div>

    <div id="message"></div>

    <script src="../js/en-upload.js"></script>
    <script src="../js/en-navbar.js"></script>
  </body>
</html>
